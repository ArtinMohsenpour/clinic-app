# dependencies
/node_modules
/.pnp
.pnp.*
.yarn/*
!.yarn/patches
!.yarn/plugins
!.yarn/releases
!.yarn/versions

# testing
/coverage

# next.js
/.next/
/out/
/.turbo

# production builds
/build

# misc
.DS_Store
Thumbs.db
*.pem

# editor/IDE
.vscode/
.idea/
*.swp
*.swo

# caches
.eslintcache
.stylelintcache

# debug & logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*

# env files (can opt-in for committing if needed)
.env*
!.env.example

# vercel
.vercel

# typescript
*.tsbuildinfo
next-env.d.ts

# --- uploads (user-generated) ---
# keep the folder, ignore its contents
/public/uploads/*
!/public/uploads/.gitkeep

# if you ever save outside public in dev:
# /uploads/*

# --- Prisma ---
# DO NOT ignore the whole prisma/ folder (we want schema + migrations in git)
# Ignore local dev databases and generated client caches only
/prisma/*.db
/prisma/*.sqlite
/prisma/*.sqlite-journal
/node_modules/.prisma/

# If you generate TS types elsewhere, keep this ignore
/src/generated/prisma
